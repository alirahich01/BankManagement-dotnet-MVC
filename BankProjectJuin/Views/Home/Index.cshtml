@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 500px;
        margin: 100px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 32px;
        text-align: center;
        margin-bottom: 30px;
        color: #007bff;
    }

    p {
        font-size: 18px;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <h1>Welcome to LSI Bank</h1>
    
    <div style="text-align: center;">
        <a href="@Url.Action("Login", "Account")" class="btn">Connect</a>
    </div>
</div>
