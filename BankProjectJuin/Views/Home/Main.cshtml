    @{
        ViewData["Title"] = "Main";
    }

    <style>
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f2f2f2;
            padding: 10px;
            margin-bottom: 20px;
        }

            .navbar .username {
                font-weight: bold;
            }

            .navbar .logout-btn {
                padding: 5px 10px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
                font-weight: bold;
                transition: background-color 0.3s;
            }

                .navbar .logout-btn:hover {
                    background-color: #0056b3;
                }

        .action-button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
            transition: background-color 0.3s;
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }

            .action-button:hover {
                background-color: #0056b3;
            }
    </style>

    <div class="navbar">
        <div class="username">Bonjour, @ViewBag.Username</div>
        <a href="@Url.Action("Logout", "Account")" class="logout-btn">Déconnexion</a>
    </div>



    <div class="container">
        <p class="balance">Balance: @ViewBag.Balance</p>

        <div class="actions">
            <a href="@Url.Action("Withdraw", "Withdraw")" class="btn btn-primary action-button">Withdraw Money</a>
            <a href="@Url.Action("Transfert", "Transfer")" class="btn btn-primary action-button">Make a Transfer</a>

        </div>
    </div>